[color]
	ui = auto
[merge]
	renamelimit = 2000
	conflictstyle = zdiff3
[alias]
	aliases = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /' | sort
	# quick history overview
	ls = "!git log -28 --oneline"
	# short status (much easier to parse)
	s = "status -s"
	# list files changed in the given ref (HEAD by default)
	lc = "show --pretty=\"\" --name-only"
	# Use like `git c "add cool feature"`, opens editor to write description
	c = "commit -esm"
	ds = "diff --stat=80"
	top = "log --oneline -1"
	fixes = "top --pretty=fixes"
	# interactively rebase on the last tag
	rb = "!git rebase -i $(git describe --abbrev=0)"
	# safer push --force
	p = "push --force-with-lease"
	pm = "push --force-with-lease --push-option=merge_request.merge_when_pipeline_succeeds"
	rest = "restore --staged ."
	st = "stash"
	sp = "stash push -m"
	sls = "stash list"
	pop = "stash pop"
	sa = "stash apply"
	regexadd = "!f() { git diff -U0 \
                | grepdiff -E \"$1\" --output-matching=hunk \
                | git apply --cached --unidiff-zero; }; f"
