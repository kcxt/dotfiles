[pull]
	rebase = true
[push]
	default = upstream
	autoSetupRemote = true
	followtags = true
[credential]
	helper = /usr/lib/git-core/git-credential-libsecret
[core]
	excludesfile = /home/cas/.gitignore
	abbrev = 12
	editor = hx
	# Exit if less than one screen + remove "skipping" markers
	pager = delta
	commentChar = ";"
[absorb]
	maxStack = 250
[fixup]
	menu = fzf --height '60%' \
                --bind 'tab:toggle-preview' \
                --preview 'git show --color {+1}' \
                --preview-window=up:80% \
                --prompt 'Select commit: '
	commit = true
[pretty]
	fixes = Fixes: %h (\"%s\")
	sum = * %C(auto)%h: %s%n%n%b
	date = %cd (\"%s\")
[rebase]
	autosquash = true
	autostash = true
	instructionFormat = format:%<(18,trunc)%aN | %s
	updateRefs = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[gpg]
	program = gpg2
[am]
	threeWay = true
[init]
	defaultBranch = main
[http]
	cookiefile = /home/cas/.gitcookies
	followRedirects = true
[diff]
	algorithm = histogram
	colorMoved = default
	tool = difftastic
	context = 4
[diff "bin"]
    textconv = hexdump -v -C
[b4]
	sendemail-identity = work
	prep-cover-template = /home/cas/.config/b4-cover-template
	ty-send-email = yes
[checkout]
	defaultRemote = origin
[stash]
	showPatch = true
[safe]
	directory = /opt/flutter
[rerere]
	enabled = true
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
[branch]
	sort = -committerdate
[fetch]
	prune = true
